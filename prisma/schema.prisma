generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  waterMeasures WaterMeasure[]
  gasMeasures   GasMeasure[]

  @@map("users")
}

model WaterMeasure {
  id          String   @id @default(uuid())
  value       Int
  date        DateTime @unique
  confirmated Boolean  @default(false)

  user    User?  @relation(fields: [user_id], references: [id])
  user_id String

  @@map("waterMeasures")
}

model GasMeasure {
  id          String   @id @default(uuid())
  value       Int
  date        DateTime
  confirmated Boolean  @default(false)

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("gasMeasures")
}
